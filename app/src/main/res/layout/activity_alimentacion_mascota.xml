<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_consideraciones">

    <TextView
        android:id="@+id/text_view_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_titulos_pantallas"
        android:elevation="0dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Alimentación de tu mascota"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="@dimen/back_btn"
        android:layout_height="@dimen/back_btn"
        android:layout_marginTop="@dimen/margin_general"
        android:background="@drawable/icono_back"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_view_fondo_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_general"
        android:elevation="0px"
        app:cardBackgroundColor="@color/colorNegroTranslucido"
        app:cardElevation="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bienvenido">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="@dimen/videos_ancho"
            android:layout_height="@dimen/videos_largo"
            android:layout_marginLeft="@dimen/margin_videos_consideraciones_left"
            android:layout_marginTop="@dimen/margin_videos_consideraciones_top"
            android:elevation="0px" />


        <Button
            android:id="@+id/btnVideo"
            android:layout_width="600px"
            android:layout_height="400px"
            android:layout_marginLeft="175px"
            android:layout_marginTop="700px"
            android:background="@android:color/transparent"
            android:elevation="0px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/tv_pautas_ancho"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_texto_consideraciones_left"
            android:layout_marginTop="@dimen/margin_texto_consideraciones_top"
            android:fontFamily="@font/lato_bold"
            android:text="Para alimentar de forma adecuada a tu mascota debes prestar mucha atención a los requerimientos nutricionales en cada etapa de su vida y teniendo en cuenta las características particulares de tu peludo. Por otra parte, más allá del tipo de comida que elijas -comercial o casera– lo importante es que sea de calidad.   "
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/texto_normal" />

        <Button
            android:id="@+id/btn_ver_mas"
            android:layout_width="@dimen/btn_peque_ancho"
            android:layout_height="@dimen/btn_peque_largo"
            android:layout_marginLeft="@dimen/margin_boton_consideraciones_left"
            android:layout_marginTop="@dimen/margin_boton_consideraciones_top"
            android:layout_marginBottom="@dimen/margin_boton_consideraciones_bottom"
            android:background="@drawable/boton_negro"
            android:elevation="0px"
            android:fontFamily="@font/varela_round"
            android:text="Ver mas"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/texto_btnes_pequenios" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>