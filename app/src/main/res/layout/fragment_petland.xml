<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/fragment_texto_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_texto_largo_fragment"
        android:fontFamily="@font/lato_bold"
        android:text="@string/InformacionPetland"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <ImageView
        android:id="@+id/iv_san_antonio"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/imagen_fragment_largo"
        android:background="@drawable/fv_petland"
        android:contentDescription="TODO"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_texto_titulos_fragment"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/VeterinariaPetLand"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_san_antonio" />
</android.support.constraint.ConstraintLayout>