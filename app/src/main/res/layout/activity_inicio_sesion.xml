<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_inicio_sesion"
    android:layout_height="match_parent"
    tools:context=".ui.InicioSesion">


    <TextView
        android:id="@+id/titulo_pantalla_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_general_2"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Bienvenido a Apipet"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/texto_titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto_pantalla_inicio"
        android:layout_width="@dimen/tv_pequenio_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_general_2"
        android:fontFamily="@font/varela_round"
        android:text="En Apipet puedes encontrar los mejores lugares para tu mascota, puedes registrar tus mascotas y buscar otras razas tambien!! tenemos sugerencias para ti, para que cuides tu mascota y tengan una agradable vida juntos"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_pantalla_inicio" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/btn_inicion_sesion_ancho"
        android:layout_height="@dimen/btn_inicion_sesion_largo"
        android:layout_marginTop="@dimen/margin_general_2"
        android:background="@drawable/boton_transparente"
        android:elevation="0px"
        android:fontFamily="@font/varela_round"
        android:text="Registrate"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/texto_btnes_pequenios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto_pantalla_inicio" />

    <EditText
        android:id="@+id/etUserInicio"
        android:layout_width="@dimen/et_ingresar_campo_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distancia_entre_et_inicio_y_boton"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register" />

    <EditText
        android:id="@+id/etPasswordInicio"
        android:layout_width="@dimen/et_ingresar_campo_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distancia_entre_et_registro"

        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserInicio" />

    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="@dimen/btn_inicion_sesion_ancho"
        android:layout_height="@dimen/btn_inicion_sesion_largo"
        android:background="@drawable/boton_negro"
        android:elevation="0px"
        android:fontFamily="@font/varela_round"
        android:text="Ingresar"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/texto_btnes_pequenios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordInicio"
        app:layout_constraintVertical_bias="0.6" />
</android.support.constraint.ConstraintLayout>