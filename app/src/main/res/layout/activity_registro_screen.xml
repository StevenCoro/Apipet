<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_inicio_sesion"
    android:layout_height="match_parent"
    tools:context=".ui.RegistroScreen">


    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/btn_registrar_registro_ancho"
        android:layout_height="@dimen/btn_registrar_registro_largo"
        android:layout_marginTop="@dimen/margin_distancia_botones_principales"
        android:background="@drawable/boton_negro"
        android:elevation="0px"
        android:fontFamily="@font/varela_round"
        android:text="@string/registrarse"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/texto_btnes_pequenios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etclave2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/logo_apipet_ancho"
        android:layout_height="@dimen/logo_apipet_largo"
        android:layout_marginTop="68dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="@dimen/edit_text_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distancia_btn_et_add_pet_screen"
        android:hint="@string/ingrese_un_email"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <EditText
        android:id="@+id/etclave"
        android:layout_width="@dimen/edit_text_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distancia_botones_principales"
        android:hint="@string/ingrese_una_contrase_a"
        android:inputType="textPassword"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsuario" />

    <EditText
        android:id="@+id/etclave2"
        android:layout_width="@dimen/edit_text_ancho"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_distancia_botones_principales"
        android:hint="Repita su contraseÃ±a"
        android:inputType="textPassword"
        android:textSize="@dimen/texto_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etclave" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/card_splash_screen_ancho"
        android:layout_height="@dimen/card_splash_screen_largo"
        android:layout_marginTop="@dimen/margin_card_view_registro_screen"
        app:cardCornerRadius="@dimen/corner_radio_btn_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_texto_splash_screen_card_view_top"
            android:fontFamily="@font/varela_round"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/TextoSplashScreen"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/texto_splash_screen_inicio" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>