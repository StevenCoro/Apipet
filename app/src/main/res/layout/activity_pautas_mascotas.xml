<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_consideraciones"
    tools:context=".ui.PautasMascotas">

    <TextView
        android:id="@+id/text_view_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:elevation="0dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Pautas para tener una mascota"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="@dimen/back_btn"
        android:layout_height="@dimen/back_btn"
        android:layout_marginTop="10dp"
        android:background="@drawable/icono_back"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/card_view_fondo_ancho"
        android:layout_height="@dimen/card_view_fondo_largo"
        android:layout_marginTop="150dp"
        android:elevation="0px"
        app:cardBackgroundColor="@color/colorNegroTranslucido"
        app:cardElevation="0px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="@dimen/videos_ancho"
            android:layout_height="@dimen/videos_largo"
            android:layout_marginLeft="175px"
            android:layout_marginTop="150px"
            android:elevation="0px" />


        <Button
            android:id="@+id/btnVideo"
            android:layout_width="600px"
            android:layout_height="400px"
            android:layout_marginLeft="175px"
            android:layout_marginTop="700px"
            android:background="@android:color/transparent"
            android:elevation="0px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/texto_pautas_ancho"
            android:layout_height="@dimen/texto_pautas_largo"
            android:layout_marginLeft="100px"
            android:layout_marginTop="700px"
            android:fontFamily="@font/lato_bold"
            android:text="Para tener una mascota tu debes considerar algunas pautas o normas para la sana convivencia de estas con ellas mismas o con su entorno (medio ambiente, ciudadanos, objetos, etc). Cuando decidimos adquirir una mascota es necesario tener conocimiento que estos dependen del ser humano y son los propietarios o tenededores quienes deben asegurar su bienestar y supervivencia; por lo que es necesario satisfacer sus necesidades bÃ¡sicas, a saber"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/texto_pautas" />

        <Button
            android:id="@+id/btn_ver_mas"
            android:layout_width="@dimen/btn_peque_ancho"
            android:layout_height="@dimen/btn_peque_largo"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="1300px"
            android:background="@drawable/boton_negro"
            android:elevation="0px"
            android:fontFamily="@font/varela_round"
            android:text="Ver mas"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/texto_btn_peque" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>