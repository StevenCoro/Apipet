<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main"
    tools:context=".MainScreen"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/text_view_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/BienvenidoPantallaMain"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/option_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:elevation="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icono_options"
        app:layout_constraintBottom_toTopOf="@+id/text_view_bienvenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_mascotas"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bienvenido"
        app:layout_constraintVertical_bias="0.24">


        <ImageView
            android:id="@+id/imagen_mascotas"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/mascotas_main" />

        <Button
            android:id="@+id/btn_mascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:fontFamily="@font/varela_round"
            android:onClick="Mascotas"
            android:text="Mascotas"
            android:textColor="@color/textColor" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_mapa"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bienvenido"
        app:layout_constraintVertical_bias="0.051">


        <ImageView
            android:id="@+id/imagen_mapa"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/mapa_main" />

        <Button
            android:id="@+id/btn_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"

            android:fontFamily="@font/varela_round"
            android:text="Mapa"
            android:textColor="@color/textColor" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_consideraciones"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bienvenido"
        app:layout_constraintVertical_bias="0.425">


        <ImageView
            android:id="@+id/imagen_consideraciones"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:elevation="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/consideraciones_main" />

        <Button
            android:id="@+id/btn_consideraciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:fontFamily="@font/varela_round"
            android:text="Consideraciones"
            android:textColor="@color/textColor" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>