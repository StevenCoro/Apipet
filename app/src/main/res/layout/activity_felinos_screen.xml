<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_felinos"
    tools:context=".ui.FelinosScreen">

    <TextView
        android:id="@+id/text_view_bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:elevation="0dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Felinos"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_titulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="@dimen/back_btn"
        android:layout_height="@dimen/back_btn"
        android:layout_marginTop="10dp"
        android:background="@drawable/icono_back"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_persa"
        android:layout_width="@dimen/card_view_raza_ancho"
        android:layout_height="@dimen/card_view_raza_largo"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorBlancoMascotas"
        app:layout_constraintBottom_toTopOf="@+id/card_view_angora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_felino_criollo">

        <Button
            android:id="@+id/btn_felino_persa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/img_persa"
            android:layout_width="@dimen/imagen_raza"
            android:layout_height="@dimen/imagen_raza"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/persa_icono" />

        <TextView
            android:id="@+id/tv_persa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Persa"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/texto_normal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_ragdoll"
        android:layout_width="@dimen/card_view_raza_ancho"
        android:layout_height="@dimen/card_view_raza_largo"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorBlancoMascotas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_angora">

        <Button
            android:id="@+id/btn_felino_ragdoll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/img_ragdoll"
            android:layout_width="@dimen/imagen_raza"
            android:layout_height="@dimen/imagen_raza"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ragdoll_icono" />

        <TextView
            android:id="@+id/tv_ragdoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ragdoll"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/texto_normal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_angora"
        android:layout_width="@dimen/card_view_raza_ancho"
        android:layout_height="@dimen/card_view_raza_largo"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorBlancoMascotas"
        app:layout_constraintBottom_toTopOf="@+id/card_view_ragdoll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_persa">

        <Button
            android:id="@+id/btn_felino_angora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/img_angora"
            android:layout_width="@dimen/imagen_raza"
            android:layout_height="@dimen/imagen_raza"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/angora_icono" />

        <TextView
            android:id="@+id/tv_angora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Angora"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/texto_normal" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_felino_criollo"
        android:layout_width="@dimen/card_view_raza_ancho"
        android:layout_height="@dimen/card_view_raza_largo"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorBlancoMascotas"
        app:layout_constraintBottom_toTopOf="@+id/card_view_persa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bienvenido">

        <Button
            android:id="@+id/btn_felino_criollo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/tv_felino_criollo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/varela_round"
            android:text="Criollo"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/texto_normal" />

        <ImageView
            android:id="@+id/img_felino_criollo"
            android:layout_width="@dimen/imagen_raza"
            android:layout_height="@dimen/imagen_raza"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/felino_criollo_icono" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>